<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html>
<html b:css='false' b:defaultwidgetversion='2' b:layoutsVersion='3' b:responsive='true' b:templateUrl='fancy.xml' b:templateVersion='1.2.0' expr:dir='data:blog.languageDirection' xmlns='http://www.w3.org/1999/xhtml' xmlns:b='http://www.google.com/2005/gml/b' xmlns:data='http://www.google.com/2005/gml/data' xmlns:expr='http://www.google.com/2005/gml/expr'>
  <head>
    <meta content='width=device-width, initial-scale=1' name='viewport'/>
    <title><data:view.title.escaped/></title>
    <link href='https://fonts.googleapis.com/css?family=Quicksand:300' rel='stylesheet'/>
    <b:include data='blog' name='all-head-content'/>
    <b:skin version='1.2.0'><![CDATA[
		
			*{
				margin : 0;
				padding : 0;
				transition : all .7s;
				box-sizing : border-box;
			}
			body {
				color : #555;
				background : #eee;
				min-height : 100vh;
				font-family : 'Quicksand', Helvetica;
			}

			div,
			img,
			main,
			aside,
			article,
			section {
				display : block;
			}
		
	]]></b:skin>
    <b:template-skin>
      <![CDATA[
      body#layout .hidden,
      body#layout .invisible {
        display: inherit;
      }
      body#layout .page {
        width: 60%;
      }
      body#layout.ltr .page {
        float: right;
      }
      body#layout.rtl .page {
        float: left;
      }
      body#layout .sidebar-container {
        width: 40%;
      }
      body#layout.ltr .sidebar-container {
        float: left;
      }
      body#layout.rtl .sidebar-container {
        float: right;
      }
      ]]>
    </b:template-skin>

		<style>
			:root {
				--primaryColor : orange;
				--secondaryColor : #444;
			}
			
      body::-webkit-scrollbar{
				width : 8px;
			}
      body::-webkit-scrollbar-thumb {
				background : #333;
			}		
      .wrap-site{}
			.main,
			.main__container,
      .header {
				position : relative;
			}
			/*menu*/
      .menu{
				display : flex;
				width : 100%;
				height : 80px;
				position : fixed;
				/*background : orange;*/
				z-index : 1000;
				color : #eee;
			}

			.menu:hover{
				box-shadow : 0 0 30px rgba(8,8,8,.3);
			}
      .menu__container{
				margin : auto;
				width : 80%;
				height : 80%;
				display : inline-flex;
				align-items : center;
				justify-content : space-between;
			}
			.menu__icon {
				width : 40px;
				height : 30;
				background : #eee;
				box-shadow : 0 5px 0 #eee, 0 -5px 0 #eee;
			}
			
      .header{
				width : 100%;
				height : 400px;
				background : #333;
			}
      .header:before{
				content : "";
				position : absolute;
				width : 100%;
				height : 100%;
				background : rgba(3,3,3, .6);
				z-index : 200;
			}
      .header__img{
				position : absolute;
				width : 100%;
				height : 100%;
				object-fit : cover;
			}
      .main{
				width : 80%;
				height : 1000px;
				background : #eee;
				border-radius : 3px;
				margin : auto;
				margin-top : -50px;
				z-index : 400;
			}
			.main:after,
      .main:before{
				content : "";
				position : absolute;
				width : 20px;
				height : 50%;
				top : 0;
				background-color : rgba(5,5,5,.4);
				filter : blur(25px);
				z-index : -1;
			}
      .main:before {
				left : 0;
				transform : rotate(-8deg);
			}
      .main:after{
				right : 0;
				transform : rotate(8deg);
			}
      .main__container{
				width : 100%;
				height : 100%;
				background : #eee;
			}
		</style>

	</head>

	<body>
		<div class='wrap-site'>
			
			<section class='menu'>
				<div class='menu__container'>
          <h2>CodeY4k</h2>
          <h2>Icon</h2>
        </div>
			</section>
			<b:switch var='data:blog.pageType'>
				<b:case value='static_page'/>
  					<h1>Page</h1>
				<b:case value='item'/>
  					<h1>Post</h1>
				<b:default/>
					<header class='header'>
						<img alt='img codey4k' class='header__img' src='https://docs.google.com/uc?id=1qv5AMaR3UNZqQnhX9IsU2NtusDnB6bDS'/>          		
					</header>
					<main class="main">
            <div class="main__container">
						</div>
          </main>
        </b:switch>
				<b:section id='main'/>
			<!--
    		
        	
			-->
		</div>
    	<script>
        	document.addEventListener('DOMContentLoaded',function(){
            window.addEventListener('scroll',function(){
							let scroll = document.documentElement.scrollTop || document.body.scrollTop,
							menu = document.querySelector('.menu')
          		if(scroll >= 100){
								Object.assign(menu.style,{
									height: '60px',
									background : 'orange'
								})
							}
          		else{
            		Object.assign(menu.style,{
            			height : '80px',
            			background : 'transparent'
            		})
							}
						})
				})
		</script>
	</body>
</html>